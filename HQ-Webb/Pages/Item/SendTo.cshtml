@page
@model HQ_Webb.Pages_Item.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Item.IsSpell" /> @Html.DisplayNameFor(model => model.Item.IsSpell)
                </label>
            </div>
            
            <div class="form-group">
                <label asp-for="Item.MaxMindModifier" class="control-label"></label>
                <input asp-for="Item.MaxMindModifier" class="form-control" />
                <span asp-validation-for="Item.MaxMindModifier" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Item.GoldModifier" class="control-label"></label>
                <input asp-for="Item.GoldModifier" class="form-control" />
                <span asp-validation-for="Item.GoldModifier" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Heroes/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
