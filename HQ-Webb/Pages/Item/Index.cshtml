@page
@model HQ_Webb.Pages_Item.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].IsSpell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].AttackModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].DefenceModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].MaxBodyModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].CurrentBodyModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].MaxMindModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].CurrentMindModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].GoldModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Isequibt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].ItemDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Item) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsSpell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttackModifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefenceModifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxBodyModifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentBodyModifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxMindModifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentMindModifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoldModifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isequibt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDescription)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
