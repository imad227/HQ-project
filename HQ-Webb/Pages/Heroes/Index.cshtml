@page
@model HQ_Webb.Pages_Heroes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Heroes[0].CharacterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Heroes[0].Attack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Heroes[0].Defence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Heroes[0].MaxBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Heroes[0].MaxMind)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Heroes[0].CurrentBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Heroes[0].CurrentMind)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Heroes[0].Gold)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Heroes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CharacterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Defence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxMind)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentMind)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gold)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
