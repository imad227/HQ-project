                <input asp-for="Barbarian.Defence" class="form-control" />
                <span asp-validation-for="Barbarian.Defence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Barbarian.MaxBody" class="control-label"></label>
                <input asp-for="Barbarian.MaxBody" class="form-control" />
                <span asp-validation-for="Barbarian.MaxBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Barbarian.MaxMind" class="control-label"></label>
                <input asp-for="Barbarian.MaxMind" class="form-control" />
                <span asp-validation-for="Barbarian.MaxMind" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Barbarian.CurrentBody" class="control-label"></label>
                <input asp-for="Barbarian.CurrentBody" class="form-control" />
