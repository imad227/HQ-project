                <label asp-for="Barbarian.Gold" class="control-label"></label>
                <input asp-for="Barbarian.Gold" class="form-control" />
                <span asp-validation-for="Barbarian.Gold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

