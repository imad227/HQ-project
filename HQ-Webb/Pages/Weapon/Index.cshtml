@page
@model HQ_Webb.Pages_Weapon.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].AttackModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].DefenceModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].BodyModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].Isequibt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon[0].WeaponDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Weapon) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttackModifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefenceModifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyModifier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isequibt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeaponDescription)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
