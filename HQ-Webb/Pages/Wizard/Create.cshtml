@model HQ_Webb.Pages_Wizard.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Wizard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Wizard.PlayerName" class="control-label"></label>
                <input asp-for="Wizard.PlayerName" class="form-control" />
                <span asp-validation-for="Wizard.PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Wizard.SpellCaster" /> @Html.DisplayNameFor(model => model.Wizard.SpellCaster)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Wizard.CharacterName" class="control-label"></label>
                <input asp-for="Wizard.CharacterName" class="form-control" />
                <span asp-validation-for="Wizard.CharacterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wizard.Attack" class="control-label"></label>
                <input asp-for="Wizard.Attack" class="form-control" />
                <span asp-validation-for="Wizard.Attack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wizard.Defence" class="control-label"></label>
                <input asp-for="Wizard.Defence" class="form-control" />
                <span asp-validation-for="Wizard.Defence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wizard.MaxBody" class="control-label"></label>
                <input asp-for="Wizard.MaxBody" class="form-control" />
                <span asp-validation-for="Wizard.MaxBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wizard.MaxMind" class="control-label"></label>
                <input asp-for="Wizard.MaxMind" class="form-control" />
                <span asp-validation-for="Wizard.MaxMind" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wizard.CurrentBody" class="control-label"></label>
                <input asp-for="Wizard.CurrentBody" class="form-control" />
                <span asp-validation-for="Wizard.CurrentBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wizard.CurrentMind" class="control-label"></label>
                <input asp-for="Wizard.CurrentMind" class="form-control" />
                <span asp-validation-for="Wizard.CurrentMind" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wizard.Gold" class="control-label"></label>
                <input asp-for="Wizard.Gold" class="form-control" />
                <span asp-validation-for="Wizard.Gold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Heroes/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
